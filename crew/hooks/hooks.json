{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|compact|resume",
        "hooks": [
          {
            "type": "command",
            "command": "\"$PLUGIN_DIR/skills/crew/scripts/hooks/session-start/restore-session-state.sh\""
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$PLUGIN_DIR/skills/crew/scripts/hooks/pre-compact/save-session-state.sh\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$PLUGIN_DIR/skills/crew/scripts/hooks/stop/check-loop.sh\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$PLUGIN_DIR/skills/crew/scripts/hooks/pre-tool/check-git-commit.sh\""
          },
          {
            "type": "command",
            "command": "\"$PLUGIN_DIR/skills/crew/scripts/hooks/pre-tool/check-gh-pr-create.sh\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$PLUGIN_DIR/skills/crew/scripts/hooks/post-tool/lint-modified-file.sh\""
          }
        ]
      }
    ]
  }
}
